<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lhb.auth.mapper.UserMapper">


    <select id="findByUsername" resultType="com.lhb.auth.pojo.DO.UserDO" parameterType="string">
        SELECT id,
               username,
               password,
               role,
               email
        FROM auth_user
        WHERE username = #{username}
    </select>

</mapper>